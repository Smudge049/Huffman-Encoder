{
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.executorMap": {
        "c": "taskkill /F /IM $fileNameWithoutExt.exe /T 2>$null ; gcc $fileName -o $fileNameWithoutExt.exe ; if ($?) { .\\$fileNameWithoutExt.exe } ; if (Test-Path $fileNameWithoutExt.exe) { Remove-Item $fileNameWithoutExt.exe }"
    }
}